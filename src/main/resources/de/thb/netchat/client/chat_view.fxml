<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.thb.netchat.client.ChatController"
            prefWidth="720" prefHeight="480">

    <!-- Titel + Status -->
    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <!-- mit Controller-Feld verknüpft -->
            <Label fx:id="chatTitle"
                   text="NetChat – Chat"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <Label fx:id="statusLabel"
                   text="(verbunden)"/>
        </HBox>
    </top>

    <!--Nachrichten -->
    <center>
        <!-- Name passt zu ChatController: messagesList -->
        <ListView fx:id="messagesList"/>
    </center>

    <!--Benutzerliste -->
    <right>
        <VBox spacing="6" styleClass="sidebar" style="-fx-padding: 10;">
            <Label text="Benutzer" styleClass="header"/>
            <ListView fx:id="userList" prefWidth="160"/>
        </VBox>
    </right>

    <!--Eingabe + Senden -->
    <bottom>
        <HBox spacing="8" style="-fx-padding: 10;">
            <TextField fx:id="messageField" promptText="Nachricht eingeben…"/>
            <Button fx:id="sendButton" text="Senden"/>
        </HBox>
    </bottom>

</BorderPane>
